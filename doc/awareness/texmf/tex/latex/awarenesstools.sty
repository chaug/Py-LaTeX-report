\RequirePackage[framemethod=default]{mdframed}
\RequirePackage{showexpl}

\mdfdefinestyle{source}{%
linecolor=palette3,linewidth=3pt,
rightline=true,innerleftmargin=10,innerrightmargin=10,
frametitlerule=true,frametitlerulecolor=palette3,
frametitlebackgroundcolor=palette3!40,
backgroundcolor=palette3!20,
frametitlerulewidth=1pt,
shadow=true,shadowsize=3pt}

\mdfdefinestyle{results}{%
linecolor=palette1,linewidth=3pt,
rightline=true,innerleftmargin=10,innerrightmargin=10,
frametitlerule=true,frametitlerulecolor=palette1,
frametitlebackgroundcolor=palette1!40,
backgroundcolor=palette1!20,
frametitlerulewidth=1pt,
shadow=true,shadowsize=3pt}

\mdfdefinestyle{references}{%
linecolor=palette4,linewidth=3pt,
rightline=true,innerleftmargin=10,innerrightmargin=10,
frametitlerule=true,frametitlerulecolor=palette4,
frametitlebackgroundcolor=palette4!40,
backgroundcolor=palette4!20,
frametitlerulewidth=1pt,
shadow=true,shadowsize=3pt}

\newenvironment{LaTeXsource}[1][Source]{%
\begin{mdframed}[style=source,frametitle={#1}]
\begin{minipage}[c]{0.7\textwidth}}{%
\end{minipage}
\end{mdframed}}

\newenvironment{Results}[1][\unskip]%
{\begin{mdframed}[style=results,frametitle={#1}]}%
{\end{mdframed}}

\newenvironment{References}[1][References]%
{\begin{mdframed}[style=references,frametitle={#1}]}%
{\end{mdframed}}

